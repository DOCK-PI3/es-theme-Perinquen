			<forceUppercase>1</forceUppercase>
			<fontPath>./_art/conthrax-sb.ttf</fontPath>
			<fontSize>0.015</fontSize>		
			<size>0.12 0.04</size>
			<zIndex>80</zIndex>
		</text>
		
		<text name="md_rating, md_genre, md_players">
			<color>fefefe</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./_art/conthrax-sb.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<size>0.14 0.04</size>
			<zIndex>80</zIndex>
		</text>
		
		<!-- Posiciones info juegos -->
		
		<text name="md_lbl_rating">
			<pos>0.405 0.18</pos>
		</text>
		
		<text name="md_rating">
			<pos>0.405 0.21</pos>
		</text>
		
		<text name="md_lbl_players">
			<pos>0.405 0.26</pos>
		</text>
		
		<text name="md_players">
			<pos>0.405 0.29</pos>
		</text>
		
		<text name="md_lbl_genre">
			<pos>0.405 0.32</pos>
		</text>
		
		<text name="md_genre">
			<pos>0.405 0.35</pos>
		</text>
		
		<text name="md_lbl_releasedate">
			<pos>0.405 0.38</pos>
		</text>
		
		<datetime name="md_releasedate">
			<color>fefefe</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./_art/SF_Hollywood_Hills.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<size>0 0.04</size>
			<pos>0.405 0.41</pos>
			<zIndex>80</zIndex>
		</datetime>

		<!-- Listado de juegos -->
		
		<textlist name="gamelist">
			<selectorImagePath>./_art/icon.png</selectorImagePath>
			<selectorColor>323b43</selectorColor>
			<selectedColor>FFFFFF</selectedColor>
			<primaryColor>323b43</primaryColor>
			<secondaryColor>eac428</secondaryColor>
			<selectorHeight>0.047</selectorHeight>
			<fontPath>./_art/SF_Hollywood_Hills.ttf</fontPath>
			<alignment>left</alignment>
			<forceUppercase>1</forceUppercase>
			<pos>0.610 0.23</pos>
			<size>0.365 0.59</size>
			<fontSize>0.04</fontSize>
			<lineSpacing>1.150</lineSpacing>
			<horizontalMargin>0.04</horizontalMargin>
			<!-- <scrollSound>./_art/assets/scroll.ogg</scrollSound> -->
			<zIndex>85</zIndex>
		</textlist>
		
	</view>

</theme>