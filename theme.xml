<theme>

	<formatVersion>4</formatVersion>

	<!-- Pantalla principal -->
<feature supported="carousel">
	<view name="system">
			<image name="background" extra="true">
			<tile>false</tile>
			<path>./_art/FONDO1_SYSTEM_MASTER_zindex2_mabedeep.png</path>
			<color>FFFFFFFF</color>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<zIndex>60</zIndex>
		</image>
		<image name="backgroundback" extra="true">
			<tile>false</tile>
			<path>./_art/FONDO_SYSTEM_well_BACK_zindex0.png</path>
			<color>FFFFFFFF</color>
			<size>1 1</size>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<zIndex>50</zIndex>
		</image>
	
		<!-- Logo del sistema -->
		
		<image name="logo">
			<path>./_art/logos/${system.theme}.png</path>
			<zIndex>65</zIndex>
		</image>
	<!-- ESTILO HP -->
<carousel name="systemcarousel">
			<type>vertical_wheel</type>
			<pos>0 0</pos>
			<size>1 1</size>
			<origin>0 0</origin>
			<color>FFFFFF00</color>
			<logoScale>1.5</logoScale>
			<logoSize>0.15 0.10</logoSize>
			<logoRotation>-9.0</logoRotation>
			<logoRotationOrigin>4 0.5</logoRotationOrigin>
			<logoAlignment>right</logoAlignment>
			<maxLogoCount>9</maxLogoCount>
			<zIndex>55</zIndex>
		</carousel>


	<!-- Numero de juegos del sistema -->
		
 			<text name="systemInfo">
				<color>FFFFFF</color>
				<fontPath>./_art/SF_Hollywood_Hills.ttf</fontPath>
				<fontSize>0.028</fontSize>
				<alignment>right</alignment>
				<zIndex>70</zIndex>
			</text> 
			
	<!-- Puntero de sistemas -->

		<image name="logo2" extra="true">
			<tile>false</tile>
			<path>./_art/assets/pointer/${system.theme}.png</path>
			<origin>1 0.5</origin>
			<pos>1 0.5</pos>
			<size>0.025 0.08</size>
			<color>FFFFFFFF</color>
			<zIndex>70</zIndex>
		</image>
		
		<!-- Info sistema -->
			<helpsystem name="help">
		
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./_art/SF_Hollywood_Hills.ttf</fontPath>
			<fontSize>0.024</fontSize>
			
		</helpsystem>
		
	</view>
</feature>


	<view name="video, basic, detailed">

		<!-- Fondo gamelist -->
		
		<image name="bg3" extra="true">
			<tile>false</tile>
			<path>./_art/ES_Plantilla_menuC_zindex0.png</path>
			<size>1 1</size>
			<pos>0 0</pos>
			<zIndex>76</zIndex>
		</image>
		<!-- Logo del sistema -->
		
		<image name="logo">
			<path>./_art/logos/${system.theme}.png</path>
			<zIndex>65</zIndex>
		</image>
		
		<!-- Texto del sistema -->
		
		<helpsystem name="help">
			<pos>0.02 0.95</pos>
			<textColor>FFFFFF</textColor>
			<fontPath>./_art/SF_Hollywood_Hills.ttf</fontPath>
			<fontSize>0.037</fontSize>
		</helpsystem>
	
	</view>

		<feature supported="video">
	
		<view name="video">
		
			<!-- Posicion y tamaño del video juego -->

			<video name="md_video">
			
				<maxSize>0.85 0.53</maxSize>
				<pos>0.73 0.30</pos>
				<delay>1.3</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
				<zIndex>80</zIndex>
				
			</video>
			
		</view>
		
	</feature>
	
<!-- Gamelist View -->

    <view name="detailed, video">
	
		<!-- Posicion y tamaño del logo del sistema -->
		
		<image name="logo">
			<pos>0.25 0.020</pos>
			<size>0.20 0.10</size>
			<zIndex>77</zIndex>
		</image>
		
		
		<!-- Posicion y tamaño imagen juego -->
		
		<image name="md_image">
			<maxSize>0.35 0.46</maxSize>
			<pos>0.248 0.445</pos>
			<zIndex>80</zIndex>
		</image>

		<!-- Descripcion juego -->
		
		<text name="md_description">
			<color>FFFFFF</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./_art/SF_Hollywood_Hills.ttf</fontPath>
